#Enable Colors when using ls command
if [ "$TERM" != "dumb" ]; then
    eval `dircolors -b`
    alias ls='ls --color=always'
    alias dir='ls --color=auto --format=vertical'
    alias vdir='ls --color=auto --format=long'
fi

#Listings
alias lsg='ls -la | grep'					#requires an argument
alias lst='ls -latr'						#sort by date
alias lsa='ls -la $1 | less'
alias ls.="ls | sed -e 's/\.[a-zA-Z]*$//'"
alias lss='ls --color=auto'
alias lls='ls -l -h -g -F --color=auto'
alias lc='ls -aCF'
alias lr='ls -lR'                 # recursive
alias lsx='ls -ax'                # sort right to left rather then in columns
alias lss='ls -shaxSr'            # sort by size
alias lm='ls -al |more'           # pipe through 'more'
alias lsl='ls -l'
alias lsa='ls -a'
alias less='less -SR'
alias lll='ls -lLBhX --time-style=locale'
alias ll='ls -lX'
alias lx='ls -lXB' #sort by ext
alias lk='ls -lSr' #soft by size
alias rdir='ls -aFlhRX | less'
alias ll="ls -lh"
alias dir='ls --color -Flh' 
alias dirh='ls --color -Flah' 
alias lsh='ls -lah'						#human readable (sizes) long and all ;-)

#shutdown
alias shutdownnow="shutdown now -P"

#Network Interfaces
alias network="sudo nano /etc/network/interfaces"

#Restart Network
alias netstart="sudo /etc/init.d/networking restart"

#Restartx
alias restartx="sudo service gdm start"


# A few ubuntu related aliases
alias mountiso='mount -t iso9660 $1 /media/iso -o loop'
alias comprep='compiz --replace --only-current-screen &'

# editing
alias hostedit='sudo xdg-open /etc/hosts'
alias fstabedit='sudo xdg-open /etc/fstab'
alias crontabedit='sudo env EDITOR=xdg-open crontab -e'

# Some more alias to avoid making mistakes:
#alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

alias f="find . |grep "
alias p='ps auxf'
alias pg='ps aux | grep' #requires an argument

alias clr='printf "\33[2J"'				#Clear screen, keep prompt at eye level

alias myip='echo Current IP Address: $(curl -s http://checkip.dyndns.org/ | grep -o "[[:digit:].]\+")'

#Compression (cd into dir, will compress every single folder)
alias tardir='for i in *; do if [ -d "$i" ]; then tar czf "$i".tar.gz  "$i"; fi; done'

# network
alias net1='watch --interval=2 "sudo netstat -apn -l -A inet"'
alias net2='watch --interval=2 "sudo netstat -anp --inet --inet6"'  
alias net3='sudo lsof -i'
alias net4='watch --interval=2 "sudo netstat -p -e --inet --numeric-hosts"'
alias net5='watch --interval=2 "sudo netstat -tulpan"'
alias net6='sudo netstat -tulpan'
alias net7='watch --interval=2 "sudo netstat -utapen"'
alias net8='watch --interval=2 "sudo netstat -ano -l -A inet"'
alias netl='sudo nmap -sT -O localhost'
alias ping='ping -c 10'
alias whois='whois -H'


