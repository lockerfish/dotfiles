#==========#
# ALIASES  #
#==========#

alias up='sudo pkill synaptic; pkill software-center;sudo rm /usr/bin/python && sudo ln -s /usr/bin/python2.7 /usr/bin/python;sudo apt-get update && sudo apt-get install $@;sudo rm /usr/bin/python && sudo ln -s /etc/alternatives/python /usr/bin/python'
alias upg='sudo pkill synaptic; pkill software-center;sudo rm /usr/bin/python && sudo ln -s /usr/bin/python2.7 /usr/bin/python; sudo apt-get update && sudo apt-get upgrade;sudo rm /usr/bin/python && sudo ln -s /etc/alternatives/python /usr/bin/python'
alias upins='sudo pkill synaptic; pkill software-center; sudo apt-get update && sudo apt-get install'
alias ins='sudo pkill synaptic; pkill software-center; sudo apt-get install'
alias reins='sudo pkill synaptic; pkill software-center; sudo apt-get install --reinstall'
alias uins='sudo pkill synaptic; pkill software-center; sudo apt-get remove'
alias puins='sudo pkill synaptic; pkill software-center; sudo apt-get remove --purge'
alias autoremove='sudo pkill synaptic; pkill software-center; sudo apt-get autoremove'
alias deball='sudo pkill synaptic; pkill software-center; sudo dpkg -i *.deb'
alias clean='sudo pkill synaptic; pkill software-center; sudo apt-get autoclean; sudo apt-get clean'
alias levelup='sudo pkill synaptic; pkill software-center; sudo apt-get update && sudo apt-get dist-upgrade'
alias ss='apt-cache search'					#Search package | Requires Apt
alias infm='apt-cache show'					#Show package detailed info
alias ver='apt-cache policy'					#Show All Versions
alias whereare='dpkg -L $1'					#Find where the all package is installed, similar to whereis
alias ins?='dpkg -l $1'						#Check if the package is installed
alias ppapurge='sudo ppa-purge'					#Revert to older package version | requires ppa-purge
alias ppaadd='sudo add-apt-repository'				#Add repos from launchpad Ex: ppa:banshee-team/ppa
alias ppadel='sudo add-apt-repository -r'			#Removes repos from launchpad Ex: ppa:banshee-team/ppa
alias keystone='sudo apt-key add '				#Add block of gpg keys manually

alias brcup='source ~/.bashrc'					#Reload bashrc without closing terminal
alias brc='xdg-open ~/.bashrc &'				#Edit Bashrc file
alias src='sudo xdg-open /etc/apt/sources.list'			#Edit Sourcelist for PPAs

alias hhg='history | grep'					#Search History for keywords
alias hhl='history'						#View History
alias javaset='sudo update-alternatives --config java'		#Set a java alternative
alias ooo='xdg-open'						#Open any file

alias mydistro='lsb_release -a && uname -a'			#Show distro version

#Update System DB
alias updatedb='sudo updatedb -v'

##Directory##
alias cachedir='cd /var/cache/apt/archives'

##Changing Directory##
alias cdb='cd $OLDPWD'						#Go back to the previous Dir
alias cd..='cd ..' 
alias cd...='cd ../..' 
alias cd....='cd ../../..' 
alias ..='cd ..' 
alias ...='cd ../..' 
alias ....='cd ../../..'``

#Display facts of the day
alias today='grep -h -d skip `date +%m/%d` /usr/share/calendar/*'

#Auto Get Missing PPA LaunchPad GPG Keys
alias autokey='sudo apt-get update 2> /tmp/keymissing; for key in $(grep "NO_PUBKEY" /tmp/keymissing |sed "s/.*NO_PUBKEY //"); do echo -e "\nProcessing key: $key"; gpg --keyserver pool.sks-keyservers.net --recv $key && gpg --export --armor $key | sudo apt-key add -; done'

# enable color support of ls and also add handy aliases
